<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hudlmo.interfaces.loginpage">

    <!-- Set custom default icon. This is used when no icon is set for incoming notification messages. -->
    <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/logo" />
    <!--
         Set color used with incoming notification messages. This is used when no color is set for the incoming
         notification message.
    -->
    <meta-data
        android:name="com.google.firebase.messaging.default_notification_color"
        android:resource="@color/colorAccent" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    "
    <service android:name=".MyFirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>
    <service android:name=".MyFirebaseInstanceIDService">
        <intent-filter>
            <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
        </intent-filter>
    </service>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-sdk android:minSdkVersion="18" />

        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hudlmo.interfaces.registerPage.Register">
            <intent-filter>
                <action android:name="hudlmo.interfaces.registerPage.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="hudlmo.interfaces.createMeeting.AddParticipants">
            <intent-filter>
                <action android:name="hudlmo.interfaces.createMeeting.AddParticipants" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="hudlmo.interfaces.loginpage.Settings">
            <intent-filter>
                <action android:name="hudlmo.interfaces.loginpage.Settings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name="hudlmo.interfaces.createMeeting.CreateMeeting">
            <intent-filter>
                <action android:name="hudlmo.interfaces.createMeeting.Createmmeting" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>


            <activity android:name="hudlmo.interfaces.VideoMain">
                <intent-filter>
                    <action android:name="hudlmo.interfaces.VideoMain" />

                    <category android:name="android.intent.category.DEFAULT" />
                </intent-filter>
            </activity>
        </activity>
        <activity
            android:name="hudlmo.interfaces.mainmenu.Mainmenu"
            android:label="@string/title_activity_mainmenu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddContacts"
            android:label="@string/title_activity_add_contacts"
            android:theme="@style/AppTheme" />
        <activity
            android:name="hudlmo.interfaces.notification.NotificationReceiverActivity"
            android:label="Notification"
            android:theme="@style/AppTheme" />


        <activity android:name="hudlmo.interfaces.Video.VideoCoference">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>